[DEFAULT]
scheme = http
host = localhost
port = ${openerp:options.xmlrpc_port}
options = -c ${buildout:directory}/etc/openerp.cfg --without-demo all

[behave]
scheme = http
database = behave
username = admin
password = admin

[+behave]
scheme = local
database = behave
username = admin
password = admin

[openerp]
scheme = http
database = ${openerp:options.db_name}
username = admin

[+openerp]
scheme = local
database = ${openerp:options.db_name}
username = admin
